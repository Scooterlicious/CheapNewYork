<h1>Create a new review</h1>

<table id="myTable" class="table">
	<thead>
		<tr>
			<th class="col-sm-1">Cost</th>
			<th class="col-sm-2">Name</th>
			<th class="col-sm-2">Address</th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td><%= @site.cost %></td>
				<td><%= @site.name %></td>
				<td><%= @site.address %></td>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
			</tr>
	</tbody>
</table>

<form action="<%= site_reviews_path %>" method="post" class="form-horizontal container" role="form">
	<label class="control-label" for="language">Rating</label>

	<select class="form-control" name="rating" >
		<option value="1">1 Star</option>
		<% 1.5.step(5,0.5) do |i| %>
			<option value ="<%= i %>"><%= i %> Stars</option>
		<% end %>
	</select>
	<label class="control-label" for="language">Review text</label>
	<textarea name="written_text" class="form-control" rows="4" cols="50" placeholder="What did you think?"></textarea>

	<%= token_tag :authenticity_token %>
	<button class="form-control" id="submit">Create Review</button>
</form>


